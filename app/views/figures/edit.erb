<h2>Edit Historical Figure</h2>

<form action='/figures/<%= @figure.id %>' method='POST'>
    <input type='hidden' name='_method' value='PATCH' id='hidden'>

    <label for='figure_name'>Name</label>
    <input type='text' name='figure[name]' id='figure_name' value='<%= @figure.name %>'><br>

    <h2>Titles</h2>
    <% Title.all.each do |title| %>
        <input type='checkbox' name='figure[title_ids][]' value='<%= title.id %>' id='title_<%= title.id %>' <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %><br> 
    <% end %>
    <h3>Create New Title</h3>
    <input type='text' name='title[name]' id='title_name'>
    <p/>

    <h2>Associated Landmarks</h2>
    <% Landmark.all.each do |landmark| %>
        <input type='checkbox' name='figure[landmark_ids][]' value='<%= landmark.id %>' id='landmark_<%= landmark.id %>' <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %><br> 
    <% end %>
    <h3>Create New Landmark</h3>
    Name: <input type='text' name='landmark[name]' id='new_landmark'> Year: <input type='number' name='landmark[year_completed]' id='landmark_year'>
    <p/>
    <input type='submit' value='Edit Figure'>
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
