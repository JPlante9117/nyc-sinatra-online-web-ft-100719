<h2>Create New Figure</h2>

<form action='/figures' method='POST'>
    <label for='figure_name'>Name</label>
    <input type='text' name='figure[name]' id='figure_name'><br>

    <h2>Titles</h2>
    <% Title.all.each do |title| %>
        <input type='checkbox' name='figure[title_ids][]' value='<%= title.id %>' id='title_<%= title.id %>'><%= title.name %><br> 
    <% end %>
    <h3>Create New Title</h3>
    <input type='text' name='title[name]' id='new_title'>
    <p/>

    <h2>Associated Landmarks</h2>
    <% Landmark.all.each do |landmark| %>
        <input type='checkbox' name='figure[landmark_ids][]' value='<%= landmark.id %>' id='landmark_<%= landmark.id %>'><%= landmark.name %><br> 
    <% end %>
    <h3>Create New Landmark</h3>
    Name: <input type='text' name='landmark[name]' id='new_landmark'> Year: <input type='number' name='landmark[year_completed]' id='landmark_year'>
    <p/>
    <input type='submit' value='Create New Figure'>
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
